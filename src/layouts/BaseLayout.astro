---
const { title = "My Site" } = Astro.props;
---

<html lang="en" class="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Global styles -->
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <header>
      <h1>{title}</h1>
      <ThemeControl />
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>